@model Ornithology.Web.Models.AveVM

@using (Html.BeginForm("Listar", "Ave", new { page=1 }, FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <div class="form-group">
            @{ Html.EnableClientValidation(false); }
            <div class="col-md-3 help-block">
                Nombre:  @Html.EditorFor(m => m.NombreComunOCientifico, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
            </div>
            <div class="col-md-3 help-block">
                Zona:  @Html.DropDownListFor(m => m.NombreZona, new SelectList(Model.ZonasDisponibles, "NombreZona", "NombreZona"), "--Mostrar todas las zonas--", new { @class = "form-control" })
            </div>
            <div class="col-md-5 help-block align-bottom">
                <div class="align-bottom" style="margin-top:19px">
                    <input type="submit" value="Filtrar" class="btn btn-default align-bottom">
                </div>
            </div>
            @{ Html.EnableClientValidation(true); }
        </div>
        
    </div>
}
